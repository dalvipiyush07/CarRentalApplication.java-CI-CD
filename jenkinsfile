pipeline {
    agent any

    environment {
        SERVER_IP    = '13.233.201.38'
        SSH_CRED_ID  = 'node-app-key'
        TOMCAT_PATH  = '/var/lib/tomcat10/webapps'
        TOMCAT_SVC   = 'tomcat10'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/dalvipiyush07/CarRentalApplication.java-CI-CD.git'
            }
        }

        stage('Build WAR') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sshagent([SSH_CRED_ID]) {
                    sh """
                        echo "Finding WAR file..."
                        WAR_FILE=\$(ls target/*.war 2>/dev/null | head -n 1)

                        if [ -z "\$WAR_FILE" ]; then
                            echo "‚ùå No WAR file found in target/. Check pom.xml packaging type!"
                            exit 1
                        fi

                        echo "Uploading WAR file: \$WAR_FILE"
                        scp -o StrictHostKeyChecking=no \$WAR_FILE ubuntu@${SERVER_IP}:/tmp/

                        echo "Deploying to Tomcat on ${SERVER_IP}..."
                        ssh -o StrictHostKeyChecking=no ubuntu@${SERVER_IP} '
                            set -e
                            echo "Stopping Tomcat..."
                            sudo systemctl stop ${TOMCAT_SVC} || true
                            echo "Clearing old deployment..."
                            sudo rm -rf ${TOMCAT_PATH}/*
                            echo "Deploying new WAR..."
                            sudo mv /tmp/*.war ${TOMCAT_PATH}/ROOT.war
                            sudo chown tomcat:tomcat ${TOMCAT_PATH}/ROOT.war
                            echo "Starting Tomcat..."
                            sudo systemctl start ${TOMCAT_SVC}
                            echo "‚úÖ Deployment complete!"
                        '
                    """
                }
            }
        }
    }

    post {
        success {
            echo "üöÄ App deployed successfully! Visit: http://${SERVER_IP}:8080/"
        }
        failure {
            echo "‚ùå Deployment failed. Check Jenkins logs for details."
        }
    }
}
